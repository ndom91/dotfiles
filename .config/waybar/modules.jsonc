{
  "backlight": {
    "interval": 2,
    "align": 0,
    "rotate": 0,
    "format": "{icon} {percent}%",
    "format-icons": [
      "",
      "",
      "",
      ""
    ],
    "on-click": "",
    "on-click-middle": "",
    "on-click-right": "",
    "on-update": "",
    "on-scroll-up": "brightnessctl set 1%+",
    "on-scroll-down": "brightnessctl set 1%-",
    "smooth-scrolling-threshold": 1
  },
  "wlr/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
      "1": "1",
      "2": "2",
      "3": "3",
      "4": "",
      "5": "",
      "6": "",
      "7": "",
      "8": "",
      "9": "",
      "10": "",
      "urgent": "",
      "active": "",
      "default": ""
    },
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "all-outputs": true
  },
  "battery": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "full-at": 100,
    "design-capacity": false,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-full": "{icon} Full",
    "format-alt": "{icon} {time}",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ],
    "format-time": "{H}h {M}min",
    "tooltip": true,
    "on-click": "~/.config/waybar/scripts/glassmorphismToggle"
  },
  "clock": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "format": "🕐 {:%H:%M}",
    // "format": "🕐 {:%I:%M %p}",
    "format-alt": " {:%a %b %d}",
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
    "on-click-right": "~/.config/hypr/scripts/changeWallpaper"
  },
  "cpu": {
    "interval": 1,
    "format": " {usage:>2}%"
  },
  "custom/menu": {
    "format": "⮝",
    "tooltip": false,
    "on-click": "$HOME/.config/hypr/scripts/menu"
  },
  "custom/power": {
    "format": " 👻 ",
    "tooltip": false,
    "on-click": "archlinux-logout"
  },
  "disk": {
    "interval": 30,
    "format": " {free}"
  },
  "memory": {
    "interval": 10,
    "format": " {used:0.1f}G"
  },
  "hyprland/window": {
    "format": ">_ {}",
    "separate-outputs": true
  },
  "network": {
    "interval": 5,
    "format-wifi": " {essid}",
    "format-ethernet": " {ipaddr}/{cidr}",
    "format-linked": " {ifname} (No IP)",
    "format-disconnected": "睊 Disconnected",
    "format-disabled": "睊 Disabled",
    "format-alt": " {bandwidthUpBits} |  {bandwidthDownBits}",
    "tooltip-format": " {ifname} via {gwaddr}",
    "on-click-right": "nm-connection-manager"
  },
  "custom/weather": {
    //shows the current weather and forecast
    "tooltip": true,
    "format": "{}",
    "interval": 30,
    "exec": "~/.config/waybar/scripts/waybar-wttr.py",
    "return-type": "json"
  },
  "custom/updater": {
    "format": " {}",
    "exec": "checkupdates | wc -l",
    "exec-if": "[[ $(checkupdates | wc -l) ]]",
    "interval": 15,
    "on-click": "kitty --class update -T update -o font_size=13 -e yay -Syu && notify-send 'The system has been updated' "
  },
  "custom/cycle_wall": {
    "format": "",
    "on-click": "~/.config/hypr/scripts/changeWallpaper",
    "tooltip-format": "Change wallpaper"
  },
  "pulseaudio": {
    "format": "{icon} {volume}",
    "format-muted": " Muted",
    "format-bluetooth": " {volume}% {format_source}",
    "format-bluetooth-muted": " Muted",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "奄",
        "奔",
        "墳",
        "墳"
      ]
    },
    "scroll-step": 5,
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "on-scroll-up": "~/.config/hypr/scripts/volume --inc",
    "on-scroll-down": "~/.config/hypr/scripts/volume --dec",
    "smooth-scrolling-threshold": 1
  },
  "custom/keybindings": {
    "format": "爵",
    "tooltip": false,
    "on-click": "~/.config/hypr/scripts/keyhint"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 6
  },
  "bluetooth": {
    "on-click-right": "blueman-manager"
    // "on-click-right": "blueberry"
  }
}
