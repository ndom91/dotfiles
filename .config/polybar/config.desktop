;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
; MODULE BACKLIGHT (LAPTOP)
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/backlight]
type = internal/backlight
card = intel_backlight

format-prefix-foreground = ${colors.pink4}
format-padding = 1
format-underline = ${colors.pink4}

label = %percentage%
label-padding-left = 0

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE BATTERY
;
