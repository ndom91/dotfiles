;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;         GLOBALS
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
; NerdFont CheatSheet
; https://www.nerdfonts.com/cheat-sheet
;

[colors]
background = #001b2b34
foreground = #d8dee9
transparent = #00ffffff

pink1  = #44475a
pink2  = #6272a4
pink3  = #bd93f9
pink4  = #ff79c6
pink5  = #c46c90
pink6  = #dc7aa2

white  = #ffffff
base08 = #ec5f67
red    = #ec5f67
base09 = #f99157
orange = #f99157
base0a = #fac863
yellow = #fac863
base0b = #99c794
green  = #99c794
base0c = #5fb3b3
teal   = #5fb3b3
base0d = #6699cc
blue   = #6699cc
base0e = #c594c5
purple = #c594c5
base0f = #ab7967
brown  = #ab7967

[bar/master]
monitor = DisplayPort-0

width = 100%
height = 32
border-bottom-size = 0
; Hack to remove the bottom padding only
line-size = 4
separator = " "

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Ubuntu Mono:size=10
; 1px lower for up/down
font-1 = Ubuntu Mono:size=10;1
; 2px lower for datetime
font-2 = Ubuntu Mono:size=10;1
font-3 = FontAwesome:pixelsize=13
font-4 = Siji:pixelsize=10
font-5 = "UbuntuMono Nerd Font:size=10;2"

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;       BAR TOP (MAIN)
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[bar/top]
inherit = bar/master
modules-left = workspacesnum
modules-center = title
modules-right = github checkly qbittorrent powermenu

tray-position = left
tray-scale = 1.0
tray-maxsize = 18
tray-background = #00
; tray-foreground = ${colors.pink2}
tray-foreground = #ffffff
tray-padding = 1
tray-offset-x = 0
tray-offset-y = 0

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     BAR BOTTOM (MAIN)
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[bar/bottom]
inherit = bar/master

bottom = true

modules-left = time btc pkg network-traffic
; modules-center = workspaces
modules-center =
modules-right = cpu ram temperature root ip


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     BAR OTHER MONITORS
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[bar/topleft]
inherit = bar/master
modules-left = workspacesnum

monitor = DisplayPort-1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;       MODULE IP
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/ip]
type = custom/script
exec-if = "ping -q -w 2 -c 1 1.1.1.1 > /dev/null"
exec = curl -s https://ifconfig.me
interval = 30

format-prefix-foreground = ${colors.pink1}
format-underline = ${colors.pink1}
format-prefix = ÔíÑ
format-size = 8

label =  %output%
label-padding-left = 1
format-padding = 1
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE CHECKLY RUNS
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/checkly]
type = custom/script
;format = <label>
format-overline = ${colors.pink2}
format-foreground = ${colors.white}
format-padding = 2
label-padding-left = 1
format-prefix = Ôò¨
exec-if = "ping -q -w 2 -c 1 1.1.1.1 > /dev/null"
exec = "/home/ndo/.config/polybar/checkly_checks.sh"
interval = 60

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE SPEEDTEST
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/speedtest]
format = <label>
format-underline = ${colors.purple}
format-padding = 1
type = custom/script
exec-if = "ping -q -w 2 -c 1 1.1.1.1 > /dev/null"
exec = "/home/ndo/.config/polybar/polybar-speedtest"
interval = 300

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;   MODULE NETWORK TRAFFIC
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/network-traffic]
type = custom/script
exec = ~/.config/polybar/network_traffic.sh
tail = true
format-prefix-foreground = ${colors.pink4}
format-underline = ${colors.pink4}
format-padding = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE NETWORK
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/network]
type = internal/network
accumulate-stats = true
interface = eth0
ping-interval = 3

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE PULSEAUDIO
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
interval = 5

label-volume = %percentage%
format-volume = <label-volume>
format-volume-padding = 1

label-muted =ÔÄ¶üîá
label-muted-foreground = ${colors.red}
format-muted-padding = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE TITLE
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/title]
type = internal/xwindow

label = %title:0:70:..%
format-overline = ${colors.pink1}
format-foreground = ${colors.white}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE POWERMENU
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/powermenu]
type = custom/menu

; Padding doesn't seem to be working
label-open = " ÔÄë  "
label-open-foreground = ${colors.pink6}
label-close = ÔÄç cancel
label-close-foreground = ${colors.pink6}
label-separator = " | "

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = termite -e 'sudo reboot'

menu-2-0 = power off
menu-2-0-exec = termite -e 'sudo poweroff'
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE CPU
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/cpu]
type = internal/cpu
interval = 0.5

format-prefix-foreground = ${colors.pink1}
format-underline = ${colors.pink1}
format-padding = 1

format-prefix = Ô°ö
label = %{A:termite -e htop &:}%percentage:2%%%{A}
label-padding-left = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE RAM
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/ram]
type = internal/memory
interval = 3

format-prefix-foreground = ${colors.pink2}
format-underline = ${colors.pink2}
format-padding = 1

format-prefix = Óâ¶
label = %{A:termite -e htop &:}%percentage_used:2%%%{A}
label-padding-left = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE GITHUB
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[module/github]
type = custom/script
format-prefix = Óúâ
format-padding = 1
exec = /home/ndo/.npm-global/bin/polybar-github $HOME/.config/polybar/.env/github 0f64db0e6bfe15fe5277ab34b4d60892305c086b 30 all+participating true
click-left = echo left >> $HOME/.config/polybar/.env/github
click-middle = echo middle >> $HOME/.config/polybar/.env/github
click-right = echo right >> $HOME/.config/polybar/.env/github
scroll-up = echo scrollUp >> $HOME/.config/polybar/.env/github
scroll-down = echo scrollDown >> $HOME/.config/polybar/.env/github
tail = true

[module/github2]
type = internal/github
token = ${file:/home/ndo/.config/polybar/github.token}
user = ndom91
empty-notifications = true
interval = 30

format-prefix-foreground = ${colors.pink3}
format-underline = ${colors.pink3}
format-padding = 1
format-prefix = Óúâ

label = %notifications%
label-padding-left = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE TEMP
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/temperature]
type = custom/script
exec = $HOME/.config/polybar/temperature.sh
interval = 10

format-prefix-foreground = ${colors.pink3}
format-underline = ${colors.pink3}
format-padding = 1
format-prefix = Ô£á

label = %output%¬∞C
label-padding-left = 2

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE ROOT
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/root]
type = internal/fs
interval = 3600
mount-0 = /

format-mounted-prefix = Ôüâ
format-mounted-prefix-foreground = ${colors.pink5}
format-mounted-underline = ${colors.pink5}
format-mounted-padding = 1

;label-mounted = %{A:termite -e "ranger /" &:}%free%%{A}
label-mounted = %used% [%percentage_used%%]
label-mounted-padding-left = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE BTC
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/btc]
type = custom/script

interval = 1200
format = <label>
format-underline = ${colors.pink2}
format-prefix-foreground = ${colors.pink2}
format-padding = 1
format-prefix = ÔÖö
label = %output%
label-padding-left = 1

; Check if connected to the internet by pinging duckduckgo
exec-if = "ping -q -w 2 -c 1 1.1.1.1 > /dev/null"
exec = $HOME/.config/polybar/btc.sh

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;     MODULE PKG (ARCH)
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/pkg]
type = custom/script

interval = 1200
format = <label>
format-underline = ${colors.pink3}
format-prefix-foreground = ${colors.pink3}
format-padding = 1
format-prefix = Ô£ï
label = %output%
label-padding-left = 1

; Check if connected to the internet by pinging duckduckgo
exec-if = "ping -q -w 2 -c 1 1.1.1.1 > /dev/null"
exec = $HOME/.config/polybar/pkg.sh

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;   MODULE i3 WORKSPACES
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/workspaces]
type = internal/i3
format = <label-mode> <label-state>
index-sort = true

label-focused = ÔÑë
label-focused-padding = 1

label-unfocused = ÔÑå
