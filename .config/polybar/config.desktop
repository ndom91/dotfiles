;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;   MODULE WORKSPACES[NUM]
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/workspacesnum]
type = internal/i3

pin-workspaces = true
enable-scroll = true
fuzzy-match = true

format = <label-state> <label-mode>

ws-icon-0 = 1;‚ôö
ws-icon-1 = 2;‚ôõ
ws-icon-2 = 3;Ô™¥
ws-icon-3 = 4;‚ôù
ws-icon-4 = 5;‚ôû
ws-icon-5 = 5;‚ôû
ws-icon-6 = 6;‚ôû
ws-icon-7 = 7;‚ôû
ws-icon-8 = 8;‚ôû
ws-icon-9 = 9;‚ôû
ws-icon-default = ‚ôü

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%

label-focused = %name%
label-focused-foreground = ${colors.pink6}
label-focused-overline = ${colors.pink6}
